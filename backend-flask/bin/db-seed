#! /usr/bin/bash

GREEN='\033[4;32m'
YELLOW='\033[1;33m'
CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-seed"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

ABS_PATH=$(readlink -f "$0")
BACKEND_DIR="$(dirname "$(dirname "$ABS_PATH")")" 

seed_path="$BACKEND_DIR/db/seed.sql"
echo "$seed_path"

if [ "$1" = "prod" ]; then
    echo "Running production mode"
    URL=$PROD_CONNECTION_URL
else
    echo "Using dev environment"
    URL=$CONNECTION_URL
fi
psql $URL cruddur < $seed_path